    if $(which $editor >& /dev/null); then
        # Set EDITOR.
        case $editor in
            # emacsclient*)
            #     # # doesn't bother waiting for a response
            #     # export EDITOR="$editor --no-wait"
            #     export EDITOR="$editor -t"
            #     ;;
            *)
                export EDITOR="$editor"
                ;;
        esac

        alias e="$EDITOR"
        break
    fi
done

